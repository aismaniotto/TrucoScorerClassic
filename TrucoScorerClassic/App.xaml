<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TrucoScorerClassic"
             x:Class="TrucoScorerClassic.App">
    <Application.Resources>
        <ResourceDictionary Source="Themes/DefaultTheme.xaml" />

        <Style TargetType="Shell" ApplyToDerivedTypes="True">
            <Setter Property="Shell.BackgroundColor" Value="{DynamicResource NavigationBarColor}" />
        </Style>

        <Style TargetType="Grid">
            <Setter Property="BackgroundColor" Value="{DynamicResource PageBackgroundColor}" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
        </Style>
    </Application.Resources>
</Application>
